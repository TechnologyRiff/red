 <h1>All Posts</h1>

<div class="row">
	<div class="col-md-8">
		<% @posts.each do |post| %>
    	<div class="media">
    		<div class="media-body">
    			<h4 class="media-heading">
						<%= link_to post.name, post %>
					</h4>
					<small>
						<%= post.description %>
					</small>
				</div>
			</div>
		<% end %>
	</div>
	<div class="col-md-4">
		<% if policy(Post.new).create? %>
			<%= link_to "New Post", new_post_path, class: 'btn btn-success' %>
		<% end %>
	</div>
</div>
