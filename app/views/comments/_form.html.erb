<%= form_for [@post, @post.comments.new] do |f| %>
  <%= f.label :Comment %>
  <%= f.text_area :body, rows: 3, class: 'form-control', placeholder: "Enter comment." %>

  <div class="form-group", style="padding:10px 0px 10px 0px">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
  <% end %>